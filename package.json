{
  "name": "secondbrain",
  "version": "1.0.0",
  "description": "Second Brain application for capturing and organizing thoughts",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && (prisma db push --skip-generate --accept-data-loss || echo 'Database push skipped') && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed-calendar": "tsx prisma/seed-calendar.ts",
    "mcp:dev": "cd mcp-server && npm install && tsx index.ts",
    "mcp:start": "cd mcp-server && npm install && tsx index.ts",
    "vercel:link": "vercel link",
    "vercel:pull": "vercel pull",
    "vercel:pull:preview": "vercel pull --environment=preview",
    "vercel:pull:production": "vercel pull --environment=production",
    "vercel:build": "vercel build",
    "vercel:build:prod": "vercel build --prod",
    "vercel:deploy": "vercel deploy",
    "vercel:deploy:prod": "vercel deploy --prod",
    "vercel:deploy:preview": "vercel pull --yes --environment=preview && vercel build && vercel deploy --prebuilt",
    "vercel:deploy:production": "vercel pull --yes --environment=production && vercel build --prod && vercel deploy --prebuilt --prod",
    "vercel:setup": "bash scripts/setup-vercel.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@auth/prisma-adapter": "^2.4.0",
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "next": "14.2.35",
    "next-auth": "^4.24.13",
    "node-cron": "^3.0.3",
    "openai": "^4.47.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "reactflow": "^11.11.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "prisma": "^5.9.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
